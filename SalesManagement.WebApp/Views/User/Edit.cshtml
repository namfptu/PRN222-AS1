@model SalesManagement.WebApp.Models.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <h1 class="mb-4">Edit User</h1>
    <div class="bg-light rounded p-4">
        <div class="card-header mb-3">
            <h5>Edit User: @Model.FullName</h5>
        </div>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RoleId" class="form-label">Role</label>
                <select asp-for="RoleId" class="form-select">
                    <option value="1">Admin</option>
                    <option value="2">Sales</option>
                    <option value="3">Product Manager</option>
                    <option value="4">Warehouse</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
             <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" asp-for="IsActive">
                <label class="form-check-label" asp-for="IsActive">Is Active</label>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
