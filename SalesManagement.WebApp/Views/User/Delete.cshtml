@model SalesManagement.Data.Entities.Account

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <h1 class="mb-4">Delete User</h1>
    <div class="bg-light rounded p-4 border-danger">
        <div class="alert alert-danger">
            <h5><i class="fa fa-exclamation-triangle"></i> Are you sure you want to delete this user?</h5>
        </div>
        <div class="card-body">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Role:</strong> @(Model.Role == 1 ? "Admin" : "Staff")</p>
            <p><strong>Id:</strong> @Model.Id</p>
            
            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
