@model SalesManagement.Data.Entities.Supplier

@{
    ViewData["Title"] = "Thêm Nhà cung cấp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Thêm mới Nhà cung cấp</h1>

    <div class="card mb-4 mt-3">
        <div class="card-header">
            <i class="fas fa-building me-1"></i> Nhập thông tin nhà cung cấp
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CompanyName" class="control-label fw-bold">Tên công ty / Nhà cung cấp <span class="text-danger">*</span></label>
                            <input asp-for="CompanyName" class="form-control" placeholder="Nhập tên nhà cung cấp..." required />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ContactPhone" class="control-label fw-bold">Số điện thoại liên hệ <span class="text-danger">*</span></label>
                            <input asp-for="ContactPhone" class="form-control" placeholder="Ví dụ: 0987654321" required />
                            <span asp-validation-for="ContactPhone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label fw-bold">Email liên hệ</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="abc@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Address" class="control-label fw-bold">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ..." />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu thông tin</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}